<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="20dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleClassName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Lớp:"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtClassName"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_toEndOf="@id/titleClassName"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/titleReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/titleClassName"
            android:text="Lý do:"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtReason"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_toEndOf="@id/titleReason"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/titleClassName"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtRequestStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:padding="3dp"
            android:layout_below="@id/txtReason"
            android:layout_alignParentEnd="true"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="16sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
